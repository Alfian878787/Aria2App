<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AddTorrentTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorTorrent</item>
        <item name="colorPrimaryDark">@color/colorTorrent_pressed</item>
        <item name="colorAccent">@color/colorTorrent_pressed</item>
    </style>
    <style name="AddMetalinkTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorMetalink</item>
        <item name="colorPrimaryDark">@color/colorMetalink_pressed</item>
        <item name="colorAccent">@color/colorMetalink_pressed</item>
    </style>

    <style name="CardViewTopSection">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="CardViewButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_layout</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TreeNodeStyleCustom">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@android:drawable/divider_horizontal_bright</item>
    </style>
</resources>
