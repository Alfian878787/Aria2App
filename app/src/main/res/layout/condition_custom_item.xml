<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <TextView
        android:id="@+id/conditionCustomItem_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:layout_toStartOf="@+id/conditionCustomItem_edit"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <ImageButton
        android:id="@+id/conditionCustomItem_edit"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/conditionCustomItem_default"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_edit_black_48dp" />

    <CheckBox
        android:id="@+id/conditionCustomItem_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="@string/_default" />

    <TextView
        android:id="@+id/conditionCustomItem_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/conditionCustomItem_condition"
        android:layout_marginStart="2dp"
        android:layout_toStartOf="@+id/conditionCustomItem_edit"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="12sp" />
</RelativeLayout>