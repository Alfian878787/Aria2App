<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_effect_dark"
    android:minHeight="42dp"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageButton
        android:id="@+id/directoryItem_toggle"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="2dp"
        android:adjustViewBounds="true"
        android:background="@drawable/ripple_effect_dark"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_keyboard_arrow_right_black_48dp" />

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_folder_black_48dp" />

    <TextView
        android:id="@+id/directoryItem_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:maxLines="2" />
</LinearLayout>