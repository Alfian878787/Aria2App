<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:paddingStart="35dp"
    tools:ignore="RtlSymmetry">

    <TextView
        android:id="@+id/optionHeader_optionLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="2dp" />

    <TextView
        android:id="@+id/optionHeader_optionShort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/optionHeader_optionLong"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/optionHeader_optionValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/optionHeader_optionLong"
        android:layout_toEndOf="@+id/optionHeader_optionLong"
        android:layout_toStartOf="@+id/optionHeader_toggleQuick"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/optionHeader_toggleQuick"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:alpha="0.7"
        android:background="@drawable/ripple_effect_dark"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_favorite_border_black_48dp" />
</RelativeLayout>