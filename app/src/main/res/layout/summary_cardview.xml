<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="6dp"
        android:paddingTop="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/summaryCardViewDetails_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:lines="1" />

            <TextView
                android:id="@+id/summaryCardViewDetails_waiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:lines="1" />

            <TextView
                android:id="@+id/summaryCardViewDetails_stopped"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/summaryCardViewDetails_chart"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <ImageButton
                android:id="@+id/summaryCardViewDetails_chartRefresh"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ripple_effect_dark"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_refresh_black_48dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">

            <ImageView
                android:layout_width="18sp"
                android:layout_height="18sp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_file_download_black_48dp" />

            <TextView
                android:id="@+id/summaryCardViewDetails_downloadSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="18sp"
                android:layout_height="18sp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_file_upload_black_48dp" />

            <TextView
                android:id="@+id/summaryCardViewDetails_uploadSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>