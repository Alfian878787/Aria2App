<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/downloadFileDialog_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ProgressBar
        android:id="@+id/downloadFileDialog_progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/downloadFileDialog_url"
        android:layout_toStartOf="@+id/downloadFileDialog_percentage"
        android:indeterminate="false"
        android:max="100" />

    <TextView
        android:id="@+id/downloadFileDialog_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/downloadFileDialog_url"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/downloadFileDialog_progressSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/downloadFileDialog_progressBar"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/downloadFileDialog_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/downloadFileDialog_progressBar"
        android:layout_marginTop="5dp" />
</RelativeLayout>