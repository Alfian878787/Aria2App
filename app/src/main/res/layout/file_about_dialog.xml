<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/fileAboutDialog_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fileAboutDialog_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fileAboutDialog_length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fileAboutDialog_completedLength"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/fileAboutDialog_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selectFile" />

    <TextView
        android:id="@+id/fileAboutDialog_urisLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/uris"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/fileAboutDialog_uris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
</LinearLayout>