<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="15dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:theme="@style/CardViewTopSection">

        <TextView
            android:id="@+id/serverCardView_currentUri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/serverCardView_chart"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/serverCardView_uri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/serverCardView_currentUri"
            android:layout_toStartOf="@+id/serverCardView_chart"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/serverCardView_downloadSpeedImage"
            android:layout_width="16sp"
            android:layout_height="16sp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/serverCardView_uri"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/ic_file_download_white_48dp" />

        <TextView
            android:id="@+id/serverCardView_downloadSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/serverCardView_uri"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@+id/serverCardView_downloadSpeedImage"
            android:textSize="14sp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/serverCardView_chart"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/serverCardView_downloadSpeed"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

</android.support.v7.widget.CardView>